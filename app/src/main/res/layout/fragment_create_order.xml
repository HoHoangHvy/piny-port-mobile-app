<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/my_app_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Customer Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer"
            android:textStyle="bold"
            android:paddingBottom="8dp" />
        <AutoCompleteTextView
            android:id="@+id/autoCompleteCustomer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/grey"
            android:hint="Search for customer"
            android:threshold="1" />

        <!-- Products Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Products"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spinner_product"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_500" />
            <Button
                android:id="@+id/btnAddProduct"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="+ Add"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue_500"
                android:layout_marginStart="8dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment method"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_payment_method"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:prompt="Select method"/>
        <!-- Voucher Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voucher"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_voucher"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Enter voucher code"
                android:background="@drawable/rounded_corners"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
            <Button
                android:id="@+id/btn_apply_voucher"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Apply"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue_500"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Total Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:cardElevation="4dp"
            android:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Create Button -->
        <Button
            android:id="@+id/btn_create"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Create Order"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue_500"
            android:layout_marginTop="16dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
